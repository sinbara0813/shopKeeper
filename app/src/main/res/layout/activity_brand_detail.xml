<?xml version="1.0" encoding="utf-8"?>
<com.d2cmall.shopkeeper.ui.view.headerViewPager.HeaderViewPager
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/head_view_pager">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first_line"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="44dp"/>

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_nav_back_black"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/first_line"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/first_line"/>

        <ImageView
            android:id="@+id/cart_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yuncang_home_qingdan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/first_line"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/banner_iv"
            android:layout_width="0dp"
            android:layout_height="125dp"
            app:layout_constraintTop_toBottomOf="@+id/first_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageView
            android:id="@+id/logo_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="85dp"
            app:layout_constraintTop_toTopOf="@+id/banner_iv"/>

        <TextView
            android:id="@+id/brand_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="#22242a"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/banner_iv"/>

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@mipmap/dianpu_home_position"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_goneMarginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/brand_name_tv"/>

        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="电话"
            android:textSize="12dp"
            android:textColor="@color/normal_black"
            app:layout_constraintTop_toBottomOf="@+id/banner_iv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:drawableTop="@mipmap/dianpu_home_phone"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/wx_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="微信"
            android:textSize="12dp"
            android:textColor="@color/normal_black"
            app:layout_constraintTop_toBottomOf="@+id/banner_iv"
            app:layout_constraintRight_toLeftOf="@+id/phone_tv"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:drawableTop="@mipmap/dianpu_home_wechat"
            android:gravity="center_horizontal"/>

        <View
            android:id="@+id/second_line"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner_iv"
            android:layout_marginTop="94dp"/>

        <View
            android:id="@+id/third_line"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/second_line"
            android:layout_height="10dp"
            android:background="@color/line"/>

        <View
            android:id="@+id/four_line"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/third_line"
            android:layout_marginTop="49dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="全部商品"
            android:textColor="@color/flash_time_bg_color"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/third_line"
            app:layout_constraintBottom_toBottomOf="@+id/four_line"/>

        <TextView
            android:id="@+id/category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            android:textColor="@color/color_black3"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/third_line"
            app:layout_constraintBottom_toBottomOf="@+id/four_line"
            android:text="商品分类"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/dianpu_home_fenlei"
            android:gravity="center_vertical"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/first_chunk"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:background="@drawable/sl_market_filter_bg"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintRight_toLeftOf="@+id/second_chunk"
            app:layout_constraintHorizontal_chainStyle="packed"/>
        <View
            android:id="@+id/second_chunk"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:background="@drawable/sl_market_filter_bg"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="@+id/first_chunk"
            app:layout_constraintLeft_toRightOf="@+id/first_chunk"
            app:layout_constraintRight_toLeftOf="@+id/third_chunk"
            android:layout_marginLeft="15dp"
            />
        <View
            android:id="@+id/third_chunk"
            android:layout_width="0dp"
            android:layout_height="25dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="@+id/first_chunk"
            app:layout_constraintLeft_toRightOf="@+id/second_chunk"
            app:layout_constraintRight_toLeftOf="@+id/four_chunk"
            android:layout_marginLeft="15dp"
            android:background="@drawable/sl_market_filter_bg"/>
        <View
            android:id="@+id/four_chunk"
            android:layout_width="0dp"
            android:layout_height="25dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="@+id/first_chunk"
            app:layout_constraintLeft_toRightOf="@+id/third_chunk"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/sl_market_filter_bg"/>

        <TextView
            android:id="@+id/syn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="综合"
            android:textSize="12dp"
            android:textColor="@color/sl_market_filter_text_color"
            app:layout_constraintLeft_toLeftOf="@+id/first_chunk"
            app:layout_constraintRight_toRightOf="@+id/first_chunk"
            app:layout_constraintTop_toTopOf="@+id/first_chunk"
            app:layout_constraintBottom_toBottomOf="@+id/first_chunk"/>

        <TextView
            android:id="@+id/profit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="利润"
            android:textSize="12dp"
            android:textColor="@color/sl_market_filter_text_color"
            android:drawableRight="@mipmap/icon_paixu"
            app:layout_constraintLeft_toLeftOf="@+id/second_chunk"
            app:layout_constraintRight_toRightOf="@+id/second_chunk"
            app:layout_constraintTop_toTopOf="@+id/second_chunk"
            app:layout_constraintBottom_toBottomOf="@+id/second_chunk"/>

        <TextView
            android:id="@+id/supply_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进价"
            android:textSize="12dp"
            android:textColor="@color/sl_market_filter_text_color"
            android:drawableRight="@mipmap/icon_paixu"
            app:layout_constraintLeft_toLeftOf="@+id/third_chunk"
            app:layout_constraintRight_toRightOf="@+id/third_chunk"
            app:layout_constraintTop_toTopOf="@+id/third_chunk"
            app:layout_constraintBottom_toBottomOf="@+id/third_chunk"/>

        <TextView
            android:id="@+id/allot_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免费拿"
            android:textSize="12dp"
            android:textColor="@color/sl_market_filter_text_color"
            app:layout_constraintLeft_toLeftOf="@+id/four_chunk"
            app:layout_constraintRight_toRightOf="@+id/four_chunk"
            app:layout_constraintTop_toTopOf="@+id/four_chunk"
            app:layout_constraintBottom_toBottomOf="@+id/four_chunk"/>

        <com.d2cmall.shopkeeper.ui.view.PtrStoreHouseFrameLayout
            android:id="@+id/ptr"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_chunk"
            app:layout_constraintBottom_toBottomOf="parent"
            app:ptr_duration_to_close="200"
            app:ptr_duration_to_close_header="1000"
            app:ptr_keep_header_when_refresh="true"
            app:ptr_pull_to_fresh="false"
            android:layout_marginTop="15dp"
            app:ptr_ratio_of_header_height_to_refresh="1.2"
            app:ptr_resistance="1.7">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </com.d2cmall.shopkeeper.ui.view.PtrStoreHouseFrameLayout>

    </android.support.constraint.ConstraintLayout>

</com.d2cmall.shopkeeper.ui.view.headerViewPager.HeaderViewPager>



    



