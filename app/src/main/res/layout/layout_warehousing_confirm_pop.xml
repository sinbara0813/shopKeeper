<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/sp_round8_bg_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:clickable="true"
    android:paddingTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认信息"
        android:textColor="@color/normal_black"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ll_delivery_company"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="#f1f1f1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="规格"
            android:textColor="@color/normal_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_spec"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:inputType="numberDecimal"
            android:paddingRight="8dp"
            android:textColor="@color/normal_black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="发货数量"
            android:textColor="@color/normal_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_deliver_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:inputType="numberDecimal"
            android:paddingRight="8dp"
            android:textColor="@color/normal_black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/sp_line"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="实收数量"
            android:textColor="@color/normal_black"
            android:textSize="12sp" />
        <EditText
            android:gravity="center_vertical|right"
            android:id="@+id/et_receive_num"
            android:inputType="number"
            android:background="@null"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:textColor="@color/normal_black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
        <TextView
            android:text="件"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:inputType="numberDecimal"
            android:paddingRight="8dp"
            android:textColor="@color/normal_black"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/sp_round2_bg_blue"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/color_white"
        android:textSize="16sp" />
    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/label_confirm_receive_tip"
        android:layout_height="match_parent"
        android:lines="2"
        android:layout_width="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:textColor="@color/normal_black"
        android:textSize="12sp" />

</LinearLayout>