<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.d2cmall.shopkeeper.ui.view.CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="13dp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/iv"
        android:layout_alignBottom="@+id/iv"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="82.5dp"
        android:layout_height="110dp"
        android:layout_toRightOf="@id/checkbox"
        android:scaleType="fitCenter"
        android:layout_marginBottom="14dp"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="@color/color_black85"
        android:layout_toRightOf="@id/iv"
        android:layout_marginLeft="12dp"
        android:maxLines="2"
        android:lineSpacingExtra="8dp"
        android:ellipsize="end"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/standard_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/color_black50"
        android:layout_below="@id/info"
        android:layout_toRightOf="@id/iv"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/select_standard_tv"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="12dp"
        android:textColor="@color/color_black50"
        android:layout_below="@id/info"
        android:layout_toRightOf="@id/iv"
        android:layout_marginTop="3dp"
        android:background="#f8f8f8"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:drawablePadding="2dp"
        android:drawableRight="@mipmap/icon_qingdan_back"
        android:layout_marginLeft="12dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_black85"
        android:textSize="12dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/iv"
        android:layout_alignBottom="@id/iv"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/quantity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv"
        android:textSize="13dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/color_black85"/>

    <ImageView
        android:id="@+id/minus_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_qingdan_jian"
        android:layout_toRightOf="@+id/iv"
        android:layout_marginLeft="12dp"
        android:layout_alignBottom="@+id/iv"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/num_tv"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/minus_iv"
        android:layout_alignTop="@id/minus_iv"
        android:layout_alignBottom="@id/minus_iv"
        android:gravity="center"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/add_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_qingdan_jia"
        android:layout_toRightOf="@id/num_tv"
        android:layout_alignBottom="@id/iv"
        android:visibility="gone"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_below="@id/iv"
        android:layout_marginLeft="14dp"/>
    
</merge>