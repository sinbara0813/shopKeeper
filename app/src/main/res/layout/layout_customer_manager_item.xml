<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:background="@color/color_white">
    <ImageView
        android:id="@+id/iv_user_head_pic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:background="@color/transparent"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_default_avatar"
        android:layout_centerVertical="true" />
    <RelativeLayout
        android:layout_toRightOf="@+id/iv_user_head_pic"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:ellipsize="end"
            android:maxLength="12"
            android:text="文森 Gill"
            android:textSize="14sp"
            android:textColor="#22242A"
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:lines="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_below="@+id/tv_user_name"
            android:text="消费 220元"
            android:textSize="12sp"
            android:textColor="@color/normal_black"
            android:id="@+id/tv_consume"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:lines="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/normal_black"
            android:layout_alignBottom="@+id/tv_user_name"
            android:id="@+id/tv_level"
            android:layout_toRightOf="@+id/tv_user_name"
            android:layout_width="46dp"
            android:layout_height="15dp"
            />

    </RelativeLayout>

    <View
        android:layout_marginLeft="83dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F1F3F8" />

</RelativeLayout>