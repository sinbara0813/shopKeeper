<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/product_style_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品类型"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/product_style_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="14dp"
        app:layout_constraintTop_toBottomOf="@+id/product_style_tv"
        android:layout_marginTop="9dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/product_source_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品来源"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_style_ll"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/product_source_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="14dp"
        app:layout_constraintTop_toBottomOf="@+id/product_source_tv"
        android:layout_marginTop="9dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/product_promotion_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动类型"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_source_ll"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"/>

    <LinearLayout
        android:id="@+id/product_promotion_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="14dp"
        app:layout_constraintTop_toBottomOf="@+id/product_promotion_tv"
        android:layout_marginTop="9dp"/>

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/product_promotion_ll"
        android:background="@color/line1"
        android:layout_marginTop="29dp"/>

    <TextView
        android:id="@+id/cancel_tv"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sure_tv"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="41dp"
        android:gravity="center"
        android:textSize="13dp"
        android:text="取消"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/sure_tv"
        android:layout_width="0dp"
        android:layout_height="41dp"
        app:layout_constraintLeft_toRightOf="@+id/cancel_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:text="确定"
        android:background="@color/normal_blue"
        android:textColor="@color/color_white"
        android:textSize="13dp"/>
    
</android.support.constraint.ConstraintLayout>