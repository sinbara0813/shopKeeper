<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_brand_logo"
        android:padding="0.5dp"
        android:background="@drawable/image_border"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/tv_brand_name"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        tools:text="NewYogo Studio"
        android:textColor="#ff333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_brand_logo"
        app:layout_constraintTop_toTopOf="@+id/iv_brand_logo"
        app:layout_constraintBottom_toBottomOf="@+id/iv_brand_logo"
        />

    <View
        android:id="@+id/bg"
        android:layout_width="100dp"
        android:layout_height="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp"
        android:background="@drawable/sp_left_round100_f8f8f8"/>

    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系店主"
        android:textColor="#ff8d92a3"
        android:textSize="12sp"
        android:id="@+id/ll_brand_wechat"
        android:drawablePadding="2dp"
        android:drawableLeft="@mipmap/icon_xiangqing_wechat"
        app:layout_constraintLeft_toLeftOf="@+id/bg"
        app:layout_constraintTop_toTopOf="@+id/bg"
        app:layout_constraintRight_toRightOf="@+id/bg"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_brand_logo"
        android:layout_marginTop="15dp"
        android:background="@color/line"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="8dp"
        tools:text="牛由果19春VINTAGE经典复古休闲西装标题标题标题"
        android:textColor="#ff333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:id="@+id/price_ll"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="2dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:gravity="left"
            android:id="@+id/tv_in_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="636.00"
            android:textColor="#666666"
            android:textSize="12sp"
            />
        <TextView
            android:layout_marginLeft="25dp"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/tv_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="636.00"
            android:textColor="#666666"
            android:textSize="12sp"
            />
        <TextView
            android:layout_marginLeft="25dp"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="right"
            android:id="@+id/tv_sale_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="636.00"
            android:textColor="#666666"
            android:textSize="12sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_product_desc"
        android:lineSpacingExtra="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="搭配自己想要的套装。 众所周知，西装、西裤是所有衣服品类里最难做的，没有精益求精的态度很难呈现看似简约却高级耐看的质感。 这个系列可随心随意搭配自己想要的套装，简约西装领，搭配小巧的单排扣，得体的剪裁，改了三版的版型，暖色格纹复古色调，搭配真正的牛角扣，一个细节都不能忽略。可帅可优雅，爱死了，春/秋穿都一样美好。"
        android:textColor="#ff666666"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_ll"
        />
</android.support.constraint.ConstraintLayout>