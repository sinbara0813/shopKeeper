<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/icon_nav_back_black"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营销工具"
            android:textColor="@color/normal_black"
            android:textSize="16dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/coupon_rl"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/gongju_bj">
        
        <View
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:background="#fffc6ca2"
            android:layout_marginLeft="2dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="优惠券"
                android:textColor="@color/flash_time_bg_color"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black4"
                android:textSize="14dp"
                android:text="定制专属店铺优惠券"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_gongju_quan"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/product_book_rl"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/gongju_bj">

        <View
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:background="#ffff8b82"
            android:layout_marginLeft="2dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="商品拼团"
                android:textColor="@color/flash_time_bg_color"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black4"
                android:textSize="14dp"
                android:text="提升客流及交易额"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_gongju_shangpin"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/coupon_book_rl"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/gongju_bj">

        <View
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:background="#ff709ef7"
            android:layout_marginLeft="2dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="优惠券拼团"
                android:textColor="@color/flash_time_bg_color"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black4"
                android:textSize="14dp"
                android:text="提升客流及成交转化率"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_gongju_quanpin"/>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:text="更多营销工具敬请期待~"
        android:paddingBottom="20dp"/>
</LinearLayout>