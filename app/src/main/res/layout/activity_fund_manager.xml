<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F6F7FA"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:background="@drawable/sp_cash_bg">

        <View
            android:id="@+id/status_bar_line"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_bar_line"
            android:layout_marginTop="44dp"/>

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="@+id/status_bar_line"
            app:layout_constraintBottom_toBottomOf="@+id/line"
            android:src="@mipmap/icon_nav_back_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资金管理"
            android:textColor="@color/color_white"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/status_bar_line"
            app:layout_constraintBottom_toBottomOf="@+id/line"/>

        <android.support.constraint.Guideline
            android:id="@+id/guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            />

        <TextView
            android:id="@+id/tv1"
            android:textSize="14sp"
            android:text="可提现金额(元)"
            android:textColor="@color/trans_60_color_white"
            android:layout_marginTop="85dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/guide_line"
            />
        <TextView
            android:id="@+id/tv_total_amount"
            android:textSize="30sp"
            tools:text="24600.00"
            android:textColor="@color/color_white"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/guide_line"
            />
        <TextView
            android:id="@+id/tv2"
            android:textSize="14sp"
            android:text="冻结金额(元)"
            android:textColor="@color/trans_60_color_white"
            android:layout_marginTop="85dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/guide_line"
            app:layout_constraintRight_toRightOf="parent"
            android:drawableRight="@mipmap/icon_zhusi"
            android:drawablePadding="0dp"
            />
        <TextView
            android:id="@+id/tv_total_foz"
            android:textSize="30sp"
            tools:text="24600.00"
            android:textColor="@color/color_white"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/guide_line"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:id="@+id/rl_withdraw"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        >
        <TextView
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:text="提现"
            android:textColor="#22242A"
            android:layout_centerVertical="true"
            android:layout_below="@+id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right_g"
            android:layout_width="18dp"
            android:layout_height="18dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:id="@+id/pending_settlement"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        >
        <TextView
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:text="待结算"
            android:textColor="#22242A"
            android:layout_centerVertical="true"
            android:layout_below="@+id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_pending_settlement_amount"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            tools:text="2200.00"
            android:textColor="@color/normal_black"
            android:layout_centerVertical="true"
            android:layout_below="@+id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right_g"
            android:layout_width="18dp"
            android:layout_height="18dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:id="@+id/rl_transaction_trade"
         android:layout_width="match_parent"
        android:layout_height="62dp"
        >
        <TextView
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:text="提现记录"
            android:textColor="#22242A"
            android:layout_centerVertical="true"
            android:layout_below="@+id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right_g"
            android:layout_width="18dp"
            android:layout_height="18dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:id="@+id/rl_transaction_record"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        >
        <TextView
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:text="交易记录"
            android:textColor="#22242A"
            android:layout_centerVertical="true"
            android:layout_below="@+id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right_g"
            android:layout_width="18dp"
            android:layout_height="18dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:id="@+id/rl_bond"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        >
        <TextView
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:text="可用保证金"
            android:textColor="#22242A"
            android:layout_centerVertical="true"
            android:layout_below="@+id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_bond"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            tools:text="2200.00"
            android:textColor="@color/normal_black"
            android:layout_centerVertical="true"
            android:layout_below="@+id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:id="@+id/rl_margin_record"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        >
        <TextView
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:text="保证金记录"
            android:textColor="#22242A"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right_g"
            android:layout_width="18dp"
            android:layout_height="18dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:id="@+id/rl_settle_margin"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        >
        <TextView
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:text="结算保证金"
            android:textColor="#22242A"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right_g"
            android:layout_width="18dp"
            android:layout_height="18dp"
            />
    </RelativeLayout>
</LinearLayout>