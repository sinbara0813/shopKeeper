<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="-6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业名称"
                android:textColor="#22242A"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_brand_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入企业名称"
                android:textColor="@color/normal_black"
                android:textColorHint="#C2C5CF"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F1F3F8" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业执照编号"
                android:textColor="#22242A"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_business_license_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入营业执照编号"
                android:textColor="@color/normal_black"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:textColorHint="#C2C5CF"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="#F1F3F8" />
        <LinearLayout
            android:id="@+id/ll_business_license"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="营业执照"
                android:textColor="#22242A"
                android:textSize="14sp" />


            <ImageView
                android:src="@mipmap/icon_addpic"
                android:id="@+id/iv_business_license"
                android:layout_width="44dp"
                android:layout_height="44dp"
                />
        </LinearLayout>




        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F6F7FA" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="法人姓名"
                android:textColor="#22242A"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_legal_person_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入法人姓名"
                android:textColor="@color/normal_black"
                android:textColorHint="#C2C5CF"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="#F1F3F8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="法人身份证号"
                android:textColor="#22242A"
                android:textSize="14sp" />

            <EditText
                android:digits="0123456789xX"
                android:id="@+id/et_legal_person_id_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入法人身份证号"
                android:textColor="@color/normal_black"
                android:textColorHint="#C2C5CF"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="#F1F3F8" />
        <LinearLayout
            android:id="@+id/ll_id_card_positive"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="身份证正面"
                android:textColor="#22242A"
                android:textSize="14sp" />


            <ImageView
                android:src="@mipmap/icon_addpic"
                android:id="@+id/iv_id_card_positive"
                android:layout_width="44dp"
                android:layout_height="44dp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="#F1F3F8" />
        <LinearLayout
            android:id="@+id/ll_id_card_opposit"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="身份证反面"
                android:textColor="#22242A"
                android:textSize="14sp" />


            <ImageView
                android:src="@mipmap/icon_addpic"
                android:id="@+id/iv_id_card_opposit"
                android:layout_width="44dp"
                android:layout_height="44dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F6F7FA" />
    </LinearLayout>
    <include layout="@layout/layout_shadow_bottom16_title" />
</RelativeLayout>