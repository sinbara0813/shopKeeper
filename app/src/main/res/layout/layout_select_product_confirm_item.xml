<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="82.5dp"
            android:layout_height="110dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_logo_empty5" />

        <TextView
            android:id="@+id/describe_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/iv"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#111111"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/describe_tv"
            android:layout_below="@id/describe_tv"
            android:layout_marginBottom="8dp"
            android:textColor="#8d92a3"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/store_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/price_tv"
            android:layout_below="@id/price_tv"
            android:textColor="#8d92a3"
            android:textSize="12dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F6F7FA"
        />

    <LinearLayout
        android:background="@drawable/sp_line"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="拼团价"
            android:textColor="@color/normal_black"
            android:textSize="12sp" />

        <EditText
            android:hint="请输入拼团价"
            android:inputType="numberDecimal"
            android:background="@null"
            android:paddingRight="10dp"
            android:id="@+id/et_promotion_price"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/black111111"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>