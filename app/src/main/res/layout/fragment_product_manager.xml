<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/bg"
        android:layout_width="0dp"
        android:layout_height="43dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/normal_blue"/>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:visibility="visible"
        app:tl_indicator_style="TRIANGLE"
        app:tl_indicator_color="@color/color_white"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_indicator_height="2dp"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/color_white"
        app:tl_textUnselectColor="@color/trans_60_color_white"
        app:tl_textsize="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/line"/>

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toTopOf="@id/bg"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        android:background="#4dffffff"
        app:layout_constraintLeft_toRightOf="@id/tabLayout"
        app:layout_constraintRight_toLeftOf="@id/filter_tv"
        android:layout_marginRight="14dp"
        />
    
    <TextView
        android:id="@+id/filter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/line"
        app:layout_constraintRight_toRightOf="parent"
        android:text="筛选"
        android:textSize="13dp"
        android:textColor="#99ffffff"
        app:layout_constraintTop_toTopOf="@id/bg"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        android:layout_marginRight="14dp"
        android:drawableRight="@mipmap/icon_shaixuan"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bg"
        app:layout_constraintBottom_toTopOf="@id/view"
        />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="59dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPager"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_white"/>

    <TextView
        android:id="@+id/tv_add_product"
        android:text="添加商品"
        android:textColor="#4050D2"
        android:layout_width="0dp"
        android:layout_height="59dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_classification_manager"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/view"
        android:background="@color/color_white"
        />
    <TextView
        android:id="@+id/tv_classification_manager"
        android:text="品类管理"
        android:textColor="#4050D2"
        android:layout_width="0dp"
        android:layout_height="59dp"
        app:layout_constraintTop_toTopOf="@+id/tv_add_product"
        app:layout_constraintLeft_toRightOf="@id/tv_add_product"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:background="@color/color_white"
        />

</android.support.constraint.ConstraintLayout>