<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:padding="0.5dp"
            android:background="@drawable/image_border"
            android:id="@+id/iv_brand_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
             />

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:lines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            tools:text="NewYogo Studio"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />
        <LinearLayout
            android:id="@+id/ll_brand_wechat"
            android:background="@drawable/sp_left_round100_f8f8f8"
            android:gravity="center_vertical|right"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_xiangqing_wechat" />
            <TextView
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical|right"
                android:paddingRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="联系店主"
                android:textColor="#ff8d92a3"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/line_margin_left"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="牛由果19春VINTAGE经典复古休闲西装标题标题标题"
            android:textColor="#ff333333"
            android:textSize="16sp"
            />
        <TextView
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_area"
            android:layout_marginLeft="39dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="杭州"
            android:textColor="#ff8d92a3"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:gravity="left"
            android:id="@+id/tv_in_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="636.00"
            android:textColor="#666666"
            android:textSize="12sp"
            />
        <TextView
            android:layout_marginLeft="25dp"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/tv_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="636.00"
            android:textColor="#666666"
            android:textSize="12sp"
            />
        <TextView
            android:layout_marginLeft="25dp"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="right"
            android:id="@+id/tv_sale_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="636.00"
            android:textColor="#666666"
            android:textSize="12sp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_product_desc"
        android:lineSpacingExtra="6dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        tools:text="搭配自己想要的套装。 众所周知，西装、西裤是所有衣服品类里最难做的，没有精益求精的态度很难呈现看似简约却高级耐看的质感。 这个系列可随心随意搭配自己想要的套装，简约西装领，搭配小巧的单排扣，得体的剪裁，改了三版的版型，暖色格纹复古色调，搭配真正的牛角扣，一个细节都不能忽略。可帅可优雅，爱死了，春/秋穿都一样美好。"
        android:textColor="#ff666666"
        android:textSize="14sp"
        />
    <com.d2cmall.shopkeeper.ui.view.nicevideo.NiceVideoPlayer
        android:visibility="gone"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="15dp"
        android:id="@id/nice_video_player"
        android:layout_width="match_parent"
        android:layout_height="468dp" />
</LinearLayout>