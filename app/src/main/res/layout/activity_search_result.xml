<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guide_line"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/icon_nav_back_black"/>


    <ImageView
        android:id="@+id/cart_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guide_line"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/yuncang_home_qingdan"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/category_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guide_line"
        app:layout_constraintRight_toLeftOf="@+id/cart_iv"
        android:src="@mipmap/yuncang_home_fenlei"
        android:layout_marginRight="12dp"/>

    <View
        android:id="@+id/select_ll"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/sp_select_bg"
        app:layout_constraintLeft_toRightOf="@+id/back_iv"
        app:layout_constraintRight_toLeftOf="@+id/category_iv"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/guide_line"/>

    <TextView
        android:id="@+id/search_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="@color/flash_time_bg_color"
        app:layout_constraintLeft_toLeftOf="@+id/select_ll"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/guide_line"/>

    <TextView
        android:id="@+id/empty_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/color_black4"
        app:layout_constraintLeft_toLeftOf="@+id/select_ll"
        app:layout_constraintRight_toRightOf="@+id/select_ll"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@mipmap/yuncang_home_sousuo"
        android:gravity="center"
        android:text="搜索商品"
        android:visibility="gone"
        android:drawablePadding="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/guide_line"/>

    <TextView
        android:id="@+id/select_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/normal_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/guide_line"/>

    <View
        android:id="@+id/guide_line"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp"
        android:background="@color/line"/>

    <View
        android:id="@+id/first_chunk"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:background="@drawable/sl_market_filter_bg"
        app:layout_constraintTop_toBottomOf="@+id/guide_line"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/second_chunk"
        app:layout_constraintHorizontal_chainStyle="packed"/>
    <View
        android:id="@+id/second_chunk"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:background="@drawable/sl_market_filter_bg"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@+id/first_chunk"
        app:layout_constraintLeft_toRightOf="@+id/first_chunk"
        app:layout_constraintRight_toLeftOf="@+id/third_chunk"
        android:layout_marginLeft="15dp"
        />
    <View
        android:id="@+id/third_chunk"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@+id/first_chunk"
        app:layout_constraintLeft_toRightOf="@+id/second_chunk"
        app:layout_constraintRight_toLeftOf="@+id/four_chunk"
        android:layout_marginLeft="15dp"
        android:background="@drawable/sl_market_filter_bg"/>
    <View
        android:id="@+id/four_chunk"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@+id/first_chunk"
        app:layout_constraintLeft_toRightOf="@+id/third_chunk"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/sl_market_filter_bg"/>

    <TextView
        android:id="@+id/syn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="综合"
        android:textSize="12dp"
        android:textColor="@color/sl_market_filter_text_color"
        app:layout_constraintLeft_toLeftOf="@+id/first_chunk"
        app:layout_constraintRight_toRightOf="@+id/first_chunk"
        app:layout_constraintTop_toTopOf="@+id/first_chunk"
        app:layout_constraintBottom_toBottomOf="@+id/first_chunk"/>

    <TextView
        android:id="@+id/profit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="利润"
        android:textSize="12dp"
        android:textColor="@color/sl_market_filter_text_color"
        android:drawableRight="@mipmap/icon_paixu"
        app:layout_constraintLeft_toLeftOf="@+id/second_chunk"
        app:layout_constraintRight_toRightOf="@+id/second_chunk"
        app:layout_constraintTop_toTopOf="@+id/second_chunk"
        app:layout_constraintBottom_toBottomOf="@+id/second_chunk"/>

    <TextView
        android:id="@+id/supply_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进价"
        android:textSize="12dp"
        android:textColor="@color/sl_market_filter_text_color"
        android:drawableRight="@mipmap/icon_paixu"
        app:layout_constraintLeft_toLeftOf="@+id/third_chunk"
        app:layout_constraintRight_toRightOf="@+id/third_chunk"
        app:layout_constraintTop_toTopOf="@+id/third_chunk"
        app:layout_constraintBottom_toBottomOf="@+id/third_chunk"/>

    <TextView
        android:id="@+id/allot_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="免费拿"
        android:textSize="12dp"
        android:textColor="@color/sl_market_filter_text_color"
        app:layout_constraintLeft_toLeftOf="@+id/four_chunk"
        app:layout_constraintRight_toRightOf="@+id/four_chunk"
        app:layout_constraintTop_toTopOf="@+id/four_chunk"
        app:layout_constraintBottom_toBottomOf="@+id/four_chunk"/>

    <com.d2cmall.shopkeeper.ui.view.PtrStoreHouseFrameLayout
        android:id="@+id/ptr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_chunk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:ptr_duration_to_close="200"
        app:ptr_duration_to_close_header="1000"
        app:ptr_keep_header_when_refresh="true"
        app:ptr_pull_to_fresh="false"
        android:layout_marginTop="15dp"
        app:ptr_ratio_of_header_height_to_refresh="1.2"
        app:ptr_resistance="1.7">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    </com.d2cmall.shopkeeper.ui.view.PtrStoreHouseFrameLayout>
</android.support.constraint.ConstraintLayout>