<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="82.5dp"
        android:layout_height="110dp"
        android:src="@mipmap/ic_logo_empty5"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/describe_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#111111"
        android:textSize="14dp"
        android:layout_toRightOf="@id/iv_product"
        android:layout_alignTop="@id/iv_product"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#8d92a3"
        android:layout_alignLeft="@id/describe_tv"
        android:layout_below="@id/describe_tv"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_marginBottom="8dp"
        android:id="@+id/writeoff_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#8d92a3"
        android:layout_alignLeft="@id/price_tv"
        android:layout_below="@id/price_tv"/>

    <TextView
        android:id="@+id/writeoff_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#8d92a3"
        android:layout_alignLeft="@id/writeoff_time_tv"
        android:layout_below="@id/writeoff_time_tv"/>

</RelativeLayout>