<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F6F7FA"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_below="@+id/rl_title"
        android:background="@color/color_white"
        android:id="@+id/rl_withdraw_info"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        >
        <TextView
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:text="提现信息"
            android:textColor="#22242A"
            android:layout_centerVertical="true"


            android:layout_below="@+id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:hint="添加"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_bank_name"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:textColor="@color/normal_black"
            android:layout_centerVertical="true"
            android:layout_below="@+id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right_g"
            android:layout_width="18dp"
            android:layout_height="18dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingRight="20dp"
        android:background="@color/color_white"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rl_withdraw_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textSize="12sp"
            android:text="提现金额"
            android:textColor="@color/normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginTop="24dp"
            android:textSize="24sp"
            android:text="¥"
            android:textColor="#111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText
            android:inputType="number|numberDecimal"
            android:id="@+id/et_apply_amount"
            android:background="@null"
            android:paddingLeft="28dp"
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <View
            android:layout_marginTop="60dp"
            android:layout_below="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F1F3F8" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/et_apply_amount"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            >
            <TextView
                android:id="@+id/tv_available_balance"
                tools:text="可用余额: 22400.00"
                android:textColor="@color/normal_black"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:gravity="right"
                android:id="@+id/tv_withdraw_all"
                android:text="全部提现"
                android:textColor="@color/normal_blue"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:text="确认提现"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:layout_below="@+id/rl_content"
        android:id="@+id/btn_withdraw"
        android:background="@drawable/sp_round2_bg_cbcbcb"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        />
    <include layout="@layout/layout_shadow_bottom16_title"/>
</RelativeLayout>