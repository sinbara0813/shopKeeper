<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <FrameLayout
        android:layout_below="@+id/rl_title"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/normal_blue"
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_marginTop="16dp"
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/icon_nav_back_white"
            />
        <ImageView
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_seach"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_shouhou_rukou"
            />
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:textSize="16sp"
                android:textColor="@color/color_white"
                android:text="自营订单"
                android:id="@+id/tv_order_self"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />
            <View
                android:layout_width="40dp"
                android:layout_height="10dp"
                />
            <TextView
                android:textSize="16sp"
                android:textColor="@color/trans_60_color_white"
                android:text="拼团订单"
                android:id="@+id/tv_order_collage"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>