<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="86dp"
        android:layout_height="115dp"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv"
        android:lineSpacingExtra="5dp"
        android:textSize="14dp"
        android:textColor="@color/color_black"
        android:layout_marginLeft="13dp"/>

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/name_tv"
        app:layout_constraintTop_toBottomOf="@+id/name_tv"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/normal_product_tv"
        android:layout_width="60dp"
        android:layout_height="18dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/name_tv"
        app:layout_constraintBottom_toBottomOf="@+id/iv"
        android:textColor="@color/normal_blue"
        android:textSize="11dp"
        android:text="普通商品"
        android:visibility="gone"
        android:background="@drawable/sp_round2_stroke_blue"/>

    <TextView
        android:id="@+id/copy_tv"
        android:layout_width="74dp"
        android:layout_height="26dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/iv"
        android:textColor="@color/color_white"
        android:textSize="12dp"
        android:text="复制到店"
        android:background="@drawable/sp_round2_bg_blue"/>

    <TextView
        android:id="@+id/group_tag_tv"
        android:layout_width="56dp"
        android:layout_height="18dp"
        android:textSize="11dp"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:text="拼团商品"
        android:background="#fb639b"
        app:layout_constraintLeft_toLeftOf="@+id/name_tv"
        app:layout_constraintBottom_toBottomOf="@+id/iv"/>

    <TextView
        android:id="@+id/group_num_tv"
        android:layout_width="44dp"
        android:layout_height="18dp"
        android:gravity="center"
        android:textSize="12dp"
        android:textColor="@color/color_black3"
        app:layout_constraintLeft_toRightOf="@+id/group_tag_tv"
        app:layout_constraintTop_toTopOf="@+id/group_tag_tv"
        android:background="#fff1f3f8"/>

</android.support.constraint.ConstraintLayout>