<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="8dp"
        tools:text="牛由果19春VINTAGE经典复古休闲西装标题标题标题"
        android:textColor="#ff333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/price_ll"
        android:layout_width="0dp"
        android:layout_height="109dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/sp_product_group_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@mipmap/bj_pintuan"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="@+id/img_bg"
            app:layout_constraintBottom_toBottomOf="@+id/img_bg"
            android:textSize="13dp"
            android:textColor="@color/color_white"
            android:text="该商品正在拼团"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_bg"
            app:layout_constraintBottom_toBottomOf="@+id/img_bg"
            android:layout_marginRight="15dp"
            tools:text="距结束:54:43:28"
            android:textSize="13dp"
            android:textColor="@color/color_red"/>

        <TextView
            android:id="@+id/group_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/img_bg"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingLeft="15dp"
            android:textSize="16dp"
            tools:text="拼团价 245.3"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintRight_toLeftOf="@+id/original_price"
            android:textColor="@color/color_red"/>

        <TextView
            android:id="@+id/original_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/group_price"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/img_bg"
            android:layout_marginTop="15dp"
            android:textSize="16dp"
            tools:text="原价 259.3"
            android:textColor="@color/flash_time_bg_color"
            />

        <TextView
            android:id="@+id/group_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/group_invalid_date"
            android:paddingLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/group_price"
            android:layout_marginTop="10dp"
            android:textSize="13dp"
            tools:text="成团人数 3人成团"
            app:layout_constraintHorizontal_weight="1"
            android:textColor="@color/flash_time_bg_color"/>

        <TextView
            android:id="@+id/group_invalid_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/group_num"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/original_price"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_weight="1"
            android:textSize="13dp"
            android:textColor="@color/flash_time_bg_color"
            tools:text="成团有效期 24小时"/>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_product_desc"
        android:lineSpacingExtra="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="搭配自己想要的套装。 众所周知，西装、西裤是所有衣服品类里最难做的，没有精益求精的态度很难呈现看似简约却高级耐看的质感。 这个系列可随心随意搭配自己想要的套装，简约西装领，搭配小巧的单排扣，得体的剪裁，改了三版的版型，暖色格纹复古色调，搭配真正的牛角扣，一个细节都不能忽略。可帅可优雅，爱死了，春/秋穿都一样美好。"
        android:textColor="#ff666666"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_ll"
        />
</android.support.constraint.ConstraintLayout>