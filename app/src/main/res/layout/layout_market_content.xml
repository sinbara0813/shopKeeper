<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/flash_time_bg_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        android:text="精选好货"
        android:layout_marginTop="12dp"/>

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tag_tv"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#E6EAF2"/>

    <TextView
        android:id="@+id/show_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/line"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:text="货架模式"
        android:gravity="center_vertical"
        android:drawablePadding="3dp"
        android:drawableRight="@mipmap/yunchang_home_icon_huojia"/>

    <com.d2cmall.shopkeeper.ui.view.AutoScrollView
        android:id="@+id/auto_scroll_view"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:mar_left="14dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/second_content_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"/>

    </com.d2cmall.shopkeeper.ui.view.AutoScrollView>

    <View
        android:id="@+id/first_chunk"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:background="@drawable/sl_market_filter_bg"
        app:layout_constraintTop_toBottomOf="@+id/auto_scroll_view"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/second_chunk"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <View
        android:id="@+id/second_chunk"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:background="@drawable/sl_market_filter_bg"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@+id/first_chunk"
        app:layout_constraintLeft_toRightOf="@+id/first_chunk"
        app:layout_constraintRight_toLeftOf="@+id/third_chunk"
        android:layout_marginLeft="10dp"
        />
    <View
        android:id="@+id/third_chunk"
        android:layout_width="0dp"
        android:layout_height="26dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@+id/first_chunk"
        app:layout_constraintLeft_toRightOf="@+id/second_chunk"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/sl_market_filter_bg"/>

    <TextView
        android:id="@+id/syn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="综合"
        android:textSize="12dp"
        android:textColor="@color/sl_market_filter_text_color"
        app:layout_constraintLeft_toLeftOf="@+id/first_chunk"
        app:layout_constraintRight_toRightOf="@+id/first_chunk"
        app:layout_constraintTop_toTopOf="@+id/first_chunk"
        app:layout_constraintBottom_toBottomOf="@+id/first_chunk"/>

    <TextView
        android:id="@+id/profit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="利润"
        android:textSize="12dp"
        android:textColor="@color/sl_market_filter_text_color"
        android:drawableRight="@mipmap/icon_paixu"
        app:layout_constraintLeft_toLeftOf="@+id/second_chunk"
        app:layout_constraintRight_toRightOf="@+id/second_chunk"
        app:layout_constraintTop_toTopOf="@+id/second_chunk"
        app:layout_constraintBottom_toBottomOf="@+id/second_chunk"/>

    <TextView
        android:id="@+id/supply_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进价"
        android:textSize="12dp"
        android:textColor="@color/sl_market_filter_text_color"
        android:drawableRight="@mipmap/icon_paixu"
        app:layout_constraintLeft_toLeftOf="@+id/third_chunk"
        app:layout_constraintRight_toRightOf="@+id/third_chunk"
        app:layout_constraintTop_toTopOf="@+id/third_chunk"
        app:layout_constraintBottom_toBottomOf="@+id/third_chunk"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/first_chunk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_goneMarginTop="0dp"
        android:layout_marginTop="13dp"/>

    <android.support.constraint.Group
        android:id="@+id/filter_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="auto_scroll_view,first_chunk,second_chunk,third_chunk,syn_tv,profit_tv,supply_price_tv"/>

</android.support.constraint.ConstraintLayout>